<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Infinity.dao.SeatMapper">

    <insert id="insertSeat">
        insert into t_seat values (null, #{studio.studioId}, #{row}, #{col}, #{seatType.seatTypeId})
    </insert>

    <delete id="deleteSeat">
        delete from t_seat
        where id = #{seatId}
    </delete>

    <delete id="deleteSeats" parameterType="integer">
        delete from t_seat where id in
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="updateSeat">
        update t_seat
        set studioId = #{studio.studioId}
            , row = #{row}
            , col = #{col}
            , seatTypeId = #{seatType.seatTypeId}
        where id = #{seatId}
    </update>

    <select id="selectAllSeat" resultType="seat">
        select * from t_seat
    </select>

</mapper>


