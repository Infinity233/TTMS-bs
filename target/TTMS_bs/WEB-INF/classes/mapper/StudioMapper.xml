<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Infinity.dao.StudioMapper">

    <insert id="insertStudio">
        insert into t_studio values (null, #{name}, #{length}, #{width});
    </insert>

    <delete id="deleteStudio">
        delete from t_studio
        where id = #{studioId}
    </delete>

    <delete id="deleteStudios" parameterType="integer">
        delete from t_studio where id in
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="updateStudio">
        update t_studio
        set name     = #{name}
            , length = #{length}
            , width  = #{width}
        where id = #{studioId}
    </update>

    <select id="selectAll" resultType="studio">
        select * from t_studio
    </select>

</mapper>


