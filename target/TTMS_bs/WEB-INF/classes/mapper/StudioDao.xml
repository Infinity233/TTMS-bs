<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Infinity.dao.StudioDao">

    <resultMap id="studioResultMap" type="studio">
        <result property="studioId" column="id"/>
        <result property="name" column="name"/>
        <result property="length" column="length"/>
        <result property="width" column="width"/>
    </resultMap>
    
    <insert id="insertStudio">
        insert into t_studio values (null, #{name}, #{length}, #{width});
    </insert>

    <delete id="deleteStudio">
        delete from t_studio
        where id = #{studioId}
    </delete>

    <delete id="deleteStudios" parameterType="integer">
        delete from t_studio where id in
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="updateStudio">
        update t_studio
        set name     = #{name}
            , length = #{length}
            , width  = #{width}
        where id = #{studioId}
    </update>

    <select id="selectAll" resultMap="studioResultMap">
        select * from t_studio
    </select>

    <select id="selectById" resultMap="studioResultMap" parameterType="integer">
        select * from t_studio where id = #{id}
    </select>

</mapper>


